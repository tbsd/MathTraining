<form method='post'>
  <div class="grid-container">
    <% if @warnings && !@warnings.empty? %>
        <div class="grid-x grid-padding-x">
            <div class="medium-12 cell">
                <div class="callout alert">
                    <ul>
                        <% @warnings.each do |warning|  %>
                            <li>
                                <%= warning %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
        <% end %>
        <% if @messages && !@messages.empty? %>
        <div class="grid-x grid-padding-x">
            <div class="medium-12 cell">
                <div class="callout success">
                    <ul>
                        <% @messages.each do |message|  %>
                            <li>
                                <%= message %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
        <% end %>
    <div class="card">
      <div class="card-divider">
        <h5><%= @current_number %>/<%= @total_number %> Вычислите:</h5>
      </div>
      <div class="card-section">
        <%= settings.current_exercise.text %>
        <div class="input-group">
          <input class="input-group-field" type="number" step="0.01" name='answer' value="<%= params['answer'] %>" >
          <div class="input-group-button">
            <input type="submit" class="button" value="Ответить">
          </div>
        </div>
      </div>
    </div>
    <div class="large-12 cell">
  </div>
  </div>
</form>
